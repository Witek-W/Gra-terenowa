<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsApplication.MainPage"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             Title="Mapa">
    <StackLayout>
        <maps:Map MapType="Street" x:Name="MainMap"/>
        <Grid ColumnDefinitions=".50*,.50*" RowDefinitions=".99*,.99*,.99*">
            <Button Grid.Row="0" Grid.Column="0" Text="Zmień mape" Clicked="ChangeMap" Margin="2"/>
            <Button Grid.Row="0" Grid.Column="1" Text="Zlokalizuj mnie" Clicked="LocateMe" Margin="2"/>
            <Entry  Grid.Row="1" Grid.Column="0" Placeholder="Wpisz adres początkowy" x:Name="EntryAddress"/>
            <Entry  Grid.Row="2" Grid.Column="0" Placeholder="Wpisz adres docelowy" x:Name="EndAddress"/>
            <Button Grid.RowSpan="2" Grid.Row="1" Grid.Column="1" Text="Szukaj" Clicked="SearchAddress" Margin="2"/>
        </Grid>
    </StackLayout>
</ContentPage>
